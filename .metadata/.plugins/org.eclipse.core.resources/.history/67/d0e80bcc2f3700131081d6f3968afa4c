#include <platform.h>
#include <xs1.h>



on stdcore[3]: out port motor=XS1_PORT_8A;


#define time_min 20000
#define time_max 1000000


void step(unsigned pulse_time)
{
	timer tmr;
	unsigned time;
	tmr :> time;

		motor <: 1;
		time+=pulse_time;
		tmr when timerafter(time) :> void;

		motor <:0;
		time+=30;
		tmr when timerafter(time) :> void;

}

int main()
{

	par
	{
		on stdcore[3]:
		{
			unsigned pulse_time=time_max;
			while(1)
			{

				timer tmr;
				unsigned time;
				tmr :> time;




				select
				{
					case tmr when timerafter(time):> void:
						if(pulse_time<=time_min)
						{
							pulse_time=time_max;
						}
						else
						{
							pulse_time-=1000;
						}
						time+=2000;
					break;
				}

				step(pulse_time);
			}
		}

	}
	return 0;
}
